@model ApplicationCore.Models.PurchaseRequestModel


<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="purchaseDetailsLabel">Purchase Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col purchase-details">
                    <p>Purchase Date</p>
                    <span class="badge rounded-pill bg-dark purchase-date">@Model.PurchaseDateTime</span>
                </div>  
            </div>
            <hr>
            <div class="row">
                <div class="col purchase-details">
                    <p>Price</p>
                    <span class="badge rounded-pill bg-dark purchase-price">@Model.TotalPrice</span>
                </div>  
            </div>
            <hr>
            <div class="row">
                <div class="col purchase-details">
                    <p>Purchase Number</p>
                    <span class="badge rounded-pill bg-dark purchase-number">@Model.PurchaseNumber</span>
                </div>  
            </div>
        </div>
    </div>
</div>
        
